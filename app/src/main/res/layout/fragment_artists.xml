<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Top artist -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/first_artist_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/first_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Artist"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Second and Third artists -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/second_artist_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/second_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Artist"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/third_artist_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/third_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Third Artist"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Fourth and Fifth artists -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/fourth_artist_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fourth_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fourth Artist"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/fifth_artist_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fifth_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fifth Artist"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
